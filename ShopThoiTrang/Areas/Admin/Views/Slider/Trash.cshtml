@model IEnumerable<MyLibrary.Model.Slider>
@{
    ViewBag.Title = "Trash";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6 text-danger text-uppercase">
                <strong>THÙNG RÁC SLIDER</strong>
            </div>
            <div class="col-md-6 text-right">
                <a class="btn btn-sm btn-info" href="@Url.Action("Index","Slider")"><i class="fas fa-backward"></i> Quay về danh sách</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        @Html.Partial("_XMessage")
        <table class="table table-bordered table-striped">
            <tr>
                <th>
                    <input type="checkbox" name="checkAll" value="all" />
                </th>
                <th>Tên slier</th>
                <th>Link</th>
                <th>Hình ảnh</th>
                <th>Ngày tạo</th>
                <th>Chức năng</th>
                <th>ID</th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="checkAll" value="all" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Link)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Img)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Create_At)
                    </td>
                    <td>

                        <a class="btn btn-sm btn-info" href="@Url.Action("Retrash","Slider",new { id =item.Id})">
                            <i class="fas fa-undo-alt"></i>
                        </a>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("Delete","Slider",new { id =item.Id})">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
