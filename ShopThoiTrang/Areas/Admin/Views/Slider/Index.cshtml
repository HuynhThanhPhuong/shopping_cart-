@model IEnumerable<MyLibrary.Model.Slider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6 text-danger text-uppercase">
                <strong>DANH SÁCH SLIDER</strong>
            </div>
            <div class="col-md-6 text-right">
                <a class="btn btn-sm btn-success" href="@Url.Action("Create","Slider")"><i class="fas fa-plus"></i> Thêm</a>
                <a class="btn btn-sm btn-danger" href="@Url.Action("Trash","Slider")"><i class="fas fa-trash"></i> Thùng rác</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        @Html.Partial("_XMessage")
        <table class="table table-bordered table-striped">
            <tr>
                <th>
                    <input type="checkbox" name="checkAll" value="all" />
                </th>
                <th>Tên Slider</th>
                <th>Link</th>
                <th>Hình ảnh</th>
                <th>Ngày tạo</th>
                <th>Chức năng</th>
                <th>ID</th>

            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td>
                <input type="checkbox" name="checkAll" value="all" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Img)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Create_At)
            </td>
            <td>
                @if (item.Status == 1)
                {
                    <a class="btn btn-sm btn-success" href="@Url.Action("Status","Slider",new { id =item.Id})">
                        <i class="fas fa-toggle-on"></i>
                    </a>
                }
                else
                {
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Status","Slider",new { id =item.Id})">
                        <i class="fas fa-toggle-off"></i>
                    </a>
                }
                <a class="btn btn-sm btn-info" href="@Url.Action("Edit","Slider",new { id =item.Id})">
                    <i class="fas fa-edit"></i>
                </a>
                <a class="btn btn-sm btn-danger" href="@Url.Action("Deltrash","Slider",new { id =item.Id})">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
        </tr>
            }

        </table>
    </div>
</div>