@model IEnumerable<MyLibrary.Model.Products>

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-lg-12">
            <div class="special-menu text-center">
                <h1 class="text-danger">
                    @ViewBag.NameCat
                </h1>
            </div>
            <h5 class="col-lg text-right">
                <a href="~/san-pham">Xem thêm</a>
            </h5>

        </div>

    </div>
    <div class="row special-list">
        @foreach (var pro in Model)
        {
            <div class="col-lg-3 col-md-6 special-grid best-seller">

                <div class="products-single fix">
                    <div class="box-img-hover">
                        <a href="~/@pro.Slug">
                            <img src="~/Public/images/product/@pro.Img" class="img-fluid" alt="Image">
                        </a>

                        <div class="mask-icon">
                            <ul>
                                <li><a href="~/@pro.Slug" data-toggle="tooltip" data-placement="right" title="View"><i class="fas fa-eye"></i></a></li>
                                <li><a href="#" data-toggle="tooltip" data-placement="right" title="Compare"><i class="fas fa-sync-alt"></i></a></li>
                                <li><a href="#" data-toggle="tooltip" data-placement="right" title="Add to Wishlist"><i class="far fa-heart"></i></a></li>
                            </ul>
                            <a class="cart" href="#">Add to Cart</a>
                        </div>
                    </div>
                    <div class="why-text text-center font18">
                        <a class="text-dark" href="~/@pro.Slug"> <h4> @pro.Name</h4></a>
                        <h5> @pro.PriceBuy.ToString("#,##0") VND</h5>
                    </div>
                </div>

            </div>
        }
    </div>
}