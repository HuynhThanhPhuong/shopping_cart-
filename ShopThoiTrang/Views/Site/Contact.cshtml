@model IEnumerable<MyLibrary.Model.Contact>
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
<!-- Start Contact Us  -->
<div class="contact-box-main">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-sm-12">
                <div class="contact-info-left">
                    <h2>THÔNG TIN LIÊN LẠC</h2>
                    <ul>
                        <li>
                            <p><i class="fas fa-map-marker-alt"></i>Địa chỉ: 69 QUANG TRUNG, GÒ VẤP
                        </li>
                        <li>
                            <p><i class="fas fa-phone-square"></i>Phone: <a href="039 524 7789">039 524 7789</a></p>
                        </li>
                        <li>
                            <p><i class="fas fa-envelope"></i>Email: <a href="mailto:thewayshop@gmail.com">thewayshop@gmail.com</a></p>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-8 col-sm-12">
                <div class="contact-form-right">
                    <h2>
                        LIÊN HỆ
                    </h2>
                    <form id="contactForm">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="txtfullname" name="name" placeholder="Họ và tên" required data-error="xin hãy nhập tên của bạn">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="text" TextMode="Email" placeholder="Email của bạn" id="txtEmail" class="form-control" name="name" required data-error="xin hãy nhập emial của bạn">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="txtPhone" name="name" placeholder="Số điện thoại" required data-error="xin hãy nhập số điện thoại của bạn">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="txtTitle" name="name" placeholder="Tiêu đề" required data-error="xin hãy nhập tiêu đề của bạn">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <textarea class="form-control" id="txtDetail" TextMode="MultiLine" placeholder="Nội dung" rows="4" data-error="Viết tin nhắn của bạn" required></textarea>
                                    <div class="help-block with-errors"></div>
                                </div>
                                <div class="submit-button text-center">
                                    <button class="btn hvr-hover" id="btnGui" runat="server" OnClick="btnGui" type="submit">Gửi liên hệ</button>
                                    <div id="btnGui" class="h3 text-center hidden"></div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Cart -->