
@model MyLibrary.Model.Post
@{
    ViewBag.Title = ViewBag.Title;
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>TIN TỨC</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/trang-chu">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Tin tức</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 text-center">
        <h1 class="font-weight-bold">@Model.Title</h1>
        <p>
            @Html.Raw(Model.Detail)
        </p>
    </div>
</div>
<div class="latest-blog">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h1>Tin tức Khác</h1>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var row_other in ViewBag.ListOther)
            {
                <div class="col-md-6 col-lg-4 col-xl-4">
                    <div class="blog-box">
                        <div class="blog-img">
                            <img class="img-fluid" src="~/Public/images/@row_other.Img" alt="" />
                        </div>
                        <div class="blog-content">
                            <div class="title-blog">
                                <a href="~/@row_other.Slug" class="font-weight-bold">@row_other.Title</a>
                                <p>@row_other.Detail</p>
                            </div>
                            <ul class="option-blog">
                                <li><a href="#" data-toggle="tooltip" data-placement="right" title="Likes"><i class="far fa-heart"></i></a></li>
                                <li><a href="#" data-toggle="tooltip" data-placement="right" title="Views"><i class="fas fa-eye"></i></a></li>
                                <li><a href="#" data-toggle="tooltip" data-placement="right" title="Comments"><i class="far fa-comments"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>